@model ControlVentas.EN.Compra

@{
    ViewBag.Title = "Imprimir";
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal Total = 0;
}
<h4>Compra</h4>
<hr />
<b>Proveedor: </b> @Model.Proveedor.Nombre
<br />
<b>Fecha: </b> @Html.DisplayFor(model => model.FechaRegistro)
<br />
<b>Estatus: </b> @Html.DisplayFor(model => model.EstatusStr)
<br />

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Precio</th>
            <th>Cantidad</th>
            <th>SubTotal</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Detalles)
        {
            <tr>
                <td>@item.Producto.Nombre</td>
                <td>$ @item.Precio</td>
                <td>@item.Cantidad</td>
                <td>$ @item.SubTotal</td>
                @{
                    Total += item.SubTotal;
                }
            </tr>
        }
    </tbody>
    <tfoot>
        <tr>
            <td colspan="3"></td>
            <td>$ @Total</td>
        </tr>
    </tfoot>
</table>

@section Scripts{

    <script>
        $(document).ready(function () {
            $("nav").hide();
            print();
        });
    </script>

}
